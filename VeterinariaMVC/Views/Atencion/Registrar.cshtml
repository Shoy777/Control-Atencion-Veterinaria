@model Model.Diagnostico

@{
    ViewBag.Title = "Diagnostico del Paciente";
    Model.Consulta consulta = new Model.Consulta();
}

<div class="breadcrumb row">
    <h2 class="text-center">Consultas</h2>
    <ol class="breadcrumb">
        <li><a href="~/consulta/">Atender otra Consulta</a></li>
        <li class="active">Consulta : @Model.ConsultaId</li>
    </ol>
</div>
@using (Html.BeginForm("Registrar", "Atencion", FormMethod.Post, new { id = "frm-diagnostico" }))
{
    <div class="panel panel-success row">
        <div class="panel-heading">
            <h3 style="color:#fff;">Editar Consulta</h3>
        </div>
        <div class="panel-body">

            <div class="row">

                <div class="col-sm-8">

                    <div class="form-group col-sm-12">
                        @Html.LabelFor(model => model.ConsultaId, "Consulta")
                        @Html.TextBoxFor(model => model.ConsultaId, new { @class = "form-control" })
                        <div class="form-group">
                            @Html.ValidationMessageFor(model => model.ConsultaId, null, new { @class = "label label-danger" })
                        </div>
                    </div>

                    <div class="form-group col-sm-12">
                        @Html.LabelFor(model => model.DiagnosticoDes)
                        @Html.TextAreaFor(model => model.DiagnosticoDes, new { @class = "form-control" })
                        <div class="form-group">
                            @Html.ValidationMessageFor(model => model.DiagnosticoDes, null, new { @class = "label label-danger" })
                        </div>
                    </div>

                </div>

                <div class="col-sm-4">
                    <div class="form-group col-sm-12">
                        <button type="submit" value="" id="btnGuardar" class="btn btn-success form-control">Guardar Cambios</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}