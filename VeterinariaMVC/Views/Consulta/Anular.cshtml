@model Model.Consulta

@{
    ViewBag.Title = "Anular Consulta";
}

<div class="breadcrumb row">
    <h2 class="text-center">Consultas</h2>
    <ol class="breadcrumb">
        <li><a href="~/consulta/">Consultas</a></li>
        <li class="active">Anular Consulta</li>
    </ol>
</div>
@using (Html.BeginForm("Anular", "Consulta", FormMethod.Post, new { id = "frm-consulta" }))
{
    <div class="panel panel-success row">
        <div class="panel-heading">
            <h3>Anular Consulta</h3>
        </div>
        <div class="panel-body">

            <div class="row">

                <div class="form-group col-sm-12">
                    @if (ViewBag.Message == "Ingrese una consulta valida")
                    {
                        <div class="alert-danger">
                            <h3 class="text-danger">@ViewBag.Message</h3>
                        </div>
                    }
                    else
                    {
                        <div class="alert-success">
                            <h3 class="text-success">@ViewBag.Message</h3>
                        </div>
                    }
                </div>

                <div class="col-sm-8">

                    @Html.HiddenFor(model => model.ConsultaId)

                    <div class="form-group col-sm-12">
                        @Html.LabelFor(model => model.ClienteId, "Dueño")
                        @Html.DropDownList("ClienteId", (IEnumerable<SelectListItem>)ViewBag.Clientes, "", new { @class = "form-control", @disabled = "" })
                    </div>

                    <div class="form-group col-sm-12">
                        @Html.LabelFor(model => model.MascotaId, "Mascota")
                        @Html.DropDownList("MascotaId", (IEnumerable<SelectListItem>)ViewBag.Mascotas, "", new { @class = "form-control", @disabled = "" })
                    </div>

                    <div class="form-group col-sm-12">
                        @Html.LabelFor(model => model.FechaAtencion, "Fecha de Atencion")
                        <div class='input-group date' id='datetimepicker1'>
                            @Html.TextBoxFor(model => model.FechaAtencion, new { @class = "form-control", @disabled = "" })
                            <span class="input-group-addon">
                                <span class="fa fa-calendar"></span>
                            </span>
                        </div>
                    </div>

                    <div class="form-group col-sm-12">
                        @Html.LabelFor(x => x.Turno, "Turno")
                        <select name="Turno" class="form-control" disabled="">
                            <option @(Model.Turno == 1 ? "selected" : "") value="1">Mañana</option>
                            <option @(Model.Turno == 2 ? "selected" : "") value="2">Tarde</option>
                        </select>
                    </div>
                    <div class="form-group col-sm-12">
                        @Html.LabelFor(model => model.Precio, "Precio")
                        @Html.TextBoxFor(model => model.Precio, new { @class = "form-control", @disabled = "" })
                    </div>

                </div>

                <div class="col-sm-4">
                    <div class="form-group col-sm-12">
                        <button type="submit" value="" id="btnGuardar" class="btn btn-success form-control">Anular</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}