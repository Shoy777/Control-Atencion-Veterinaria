@model List<Model.Consulta>
@{
    ViewBag.Title = "Listado de Consultas Atendidas";
}

<div class="breadcrumb">
    <div class="row">
        <div class="col-sm-10">
            <h2>Consultas Atendidas</h2>
        </div>
        <div class="col-sm-2 text-right">
            <a class="btn btn-success" href="~/consulta/crud">Nuevo registro</a>
        </div>
    </div>
</div>

<ul class="nav nav-tabs" role="tablist">
    <li role="presentation"><a href="~/consulta/">Hoy</a></li>
    <li role="presentation"><a href="~/consulta/consultas">Por Atender</a></li>
    <li role="presentation" class="active"><a href="~/consulta/atendidas">Atendidas</a></li>
    <li role="presentation"><a href="~/consulta/anuladas">Anuladas</a></li>
</ul>

<div class="panel panel-success">
    <div class="panel-heading">
        Listado de Consultas Atendidas
    </div>
    <div class="panel-body">
        @if (Model.Count == 0)
        {
            <h3>Aún no hay consultas atendidas</h3>
        }
        else
        {

            <table class="table table-responsive">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Cliente</th>
                        <th>Mascota</th>
                        <th>Fecha de Registro</th>
                        <th>Fecha de Atencion</th>
                        <th>Precio</th>
                        <th>Estado</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var i in Model)
                    {
                        <tr>
                            <td>@i.ConsultaId</td>
                            <td>@i.Cliente.NombreCompleto</td>
                            <td>@i.Mascota.Nombre</td>
                            <td>@i.FechaRegistro</td>
                            <td>@i.FechaAtencion</td>
                            <td>@i.Precio</td>
                            @if (i.Estado == 2){<td>Atendido</td> }
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>