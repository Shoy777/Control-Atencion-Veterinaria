@model Model.Cliente
@{
    ViewBag.Title = (Model.ClienteId > 0 ? Model.Nombre + " " + Model.Apellido : "Nuevo registro");
}

<div class="breadcrumb row">
    <h2 class="text-center">Cliente</h2>
    <ol class="breadcrumb">
        <li><a href="~/cliente/">Clientes</a></li>
        <li class="active">@(Model.ClienteId > 0 ? Model.Nombre + " " + Model.Apellido : "Nuevo Registro")</li>
    </ol>
</div>
@using (Html.BeginForm("Modificar", "Cliente", FormMethod.Post, new { id = "frm-modificarCliente" }))
{
    <div class="panel panel-success row">
        <div class="panel-heading">
            <h3>Modificar Cliente</h3>
        </div>
        <div class="panel-body">

            <div class="row">

                <div class="form-group col-sm-12">
                    @if (Model.Message == "Ingrese otro Nombre y Apellido")
                    {
                    <div class="alert-danger">
                        <h3 class="text-danger">@Model.Message</h3>
                    </div>
                    }
                    else if (Model.Message == "Registro modificado")
                    {
                    <div class="alert-success">
                        <h3 class="text-success">@Model.Message <i class='fa fa-check-circle'></i></h3>
                    </div>
                    }
                    else
                    {
                    <div>
                        <h3>@Model.Message</h3>
                    </div>
                    }
                </div>

                <div class="col-sm-8">

                    @Html.HiddenFor(model => model.ClienteId)
                    @Html.HiddenFor(model => model.Estado)

                    <div class="form-group col-sm-12">
                        @Html.LabelFor(model => model.Nombre)
                        @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control" })
                        <div class="form-group">
                            @Html.ValidationMessageFor(model => model.Nombre, null, new { @class = "label label-danger" })
                        </div>
                    </div>

                    <div class="form-group col-sm-12">
                        @Html.LabelFor(model => model.Apellido)
                        @Html.TextBoxFor(model => model.Apellido, new { @class = "form-control" })
                        <div class="form-group">
                            @Html.ValidationMessageFor(model => model.Apellido, null, new { @class = "label label-danger" })
                        </div>
                    </div>

                    <div class="form-group col-sm-12">
                        @Html.LabelFor(model => model.Telefono)
                        @Html.TextBoxFor(model => model.Telefono, new { @class = "form-control" })
                        <div class="form-group">
                            @Html.ValidationMessageFor(model => model.Telefono, null, new { @class = "label label-danger" })
                        </div>
                    </div>

                </div>

                <div class="col-sm-4">
                    <div class="form-group col-sm-12">
                        <button type="submit" value="" id="btnGuardar" class="btn btn-success form-control">Modificar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}