@model List<Model.Usuario>
@{
    ViewBag.Title = "Listado de Usuarios";
}

<div class="breadcrumb">
    <div class="row">
        <div class="col-sm-10">
            <h2>Usuarios</h2>
        </div>
        <div class="col-sm-2 text-right">
            <a class="btn btn-success" href="~/usuario/crud">Nuevo registro</a>
        </div>
    </div>
</div>

<ul class="nav nav-tabs" role="tablist">
    <li role="presentation" class="active"><a>Activos</a></li>
    <li role="presentation"><a href="~/usuario/eliminados">Eliminados</a></li>
</ul>

<div class="panel panel-success">
    <div class="panel-heading">
        Listado de Usuarios
    </div>
    <div class="panel-body">
        @if (Model.Count == 0)
        {
            <h3>Aún no hay usuarios registrados</h3>
        }
        else
        {
            <table class="table table-striped">
                <thead>
                    <tr class="text-left">
                        <th>ID</th>
                        <th>Usuario</th>
                        <th>Rol</th>
                        <th>Nombre de Usuario</th>
                        <th>DNI</th>
                        <th>Telefono</th>
                        <th>Estado</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var i in Model)
                    {
                        <tr>
                            <td>@i.UsuarioId</td>
                            <td>@i.Nombre @i.Apellido</td>
                            <td>@i.Rol.Descripcion</td>
                            <td>@i.NombreUsuario</td>
                            <td>@i.DNI</td>
                            <td>@i.Telefono</td>
                            <td>Activo</td>
                            <td class="text-right">
                                <a class="btn btn-danger" href="~/usuario/eliminar/@i.UsuarioId" title="Eliminar">
                                    <i class="fa fa-trash"></i>
                                </a>
                                <a class="btn btn-default" href="~/usuario/crud/@i.UsuarioId" title="Editar">
                                    <i class="fa fa-pencil"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>